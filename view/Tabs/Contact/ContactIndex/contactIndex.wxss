/* 地图 */
.mapImg {
  width :100%;
  height: 45vh;
}

/* 联系我们 */
.contactus{
  margin-top: 10rpx;
  text-align: center;
}

.contactus text{
  font-size: 35rpx;
  font-weight:700;
}

.contactus .bottomline{
  background: #bcbcbc;
  width: 24%;
  height: 10rpx;
  margin-left:38%;
}

.contactus .content{
  margin-left: 10rpx;
  margin-top: 10rpx;
  text-align: left;
}

.contactus .content text{
  font-size: 25rpx;
  font-weight: 400;
  line-height: 90%;
}

/* 加入我们 */
.joinus{
  margin-top: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.joinus text{
  font-size: 35rpx;
  font-weight:700;
}

.joinus .bottomline{
  background: #bcbcbc;
  width: 24%;
  height: 10rpx;
  margin-left:38%;
}

.joinus .jobcontent{
  margin-top:30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.joinus .jobcontent .job{
  border-width: 2rpx 2rpx 2rpx 2rpx;
  border-color: #bcbcbc;
  text-align: center;
  border-style: solid;
  margin-bottom: 30rpx;
}

.joinus .jobcontent .job .Name{
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  margin-top: 10rpx;
}

.joinus .jobcontent .job .Address{
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  margin-top: 10rpx;
  color: blue;
}

.joinus .jobcontent .job .Description{
  width: 90%;
  margin-left: 5%;
}

.joinus .jobcontent .job .Description text{
  font-size: 26rpx;
  font-weight: 400;
  text-align: left;
  color: #bcbcbc;
  margin-left: 20rpx;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
}

.joinus .jobcontent .job .sendBtn{
  border-radius: 25rpx;
  border-style: solid;
  border-width: 2rpx 2rpx 2rpx 2rpx;
  border-color: blue;
  font-size: 28rpx;
  font-weight: 500;
  color: blue;
  width: 26%;
  line-height: 155%;  
  text-align: center; 
  height:45rpx;
  margin-top: 15rpx;
  margin-left: 37%;
  margin-bottom: 10rpx;
}