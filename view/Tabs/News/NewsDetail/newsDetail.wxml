<!--view/Tabs/News/NewsDetail/newsDetail.wxml-->
<import src="/lib/wxParse/wxParse.wxml"/>
<import src="/view/template/item.wxml"/>

<view class='container'>
  <!-- 头部 -->
  <template is="top"/>
  <!-- 左侧菜单按钮 -->
  <template is="item"/> 
  <!-- 左侧菜单 -->
  <template is="dra" wx:if="{{showModalStatus}}"/>

  <loading hidden="{{loadingHidden}}" style='z-index:999'>
          加载中...
  </loading>

  <view class='detail-title'>
    <text>{{news_detail.title}}</text>
  </view>
  <view class='detail-date'>
    <text>{{news_detail.date}}</text>
  </view>
  <view class='detail-content'>
    <template  is="wxParse" data="{{wxParseData:article.nodes}}"/>
  </view>
    <!-- 页面加载失败 -->
  <image src='/image/404.png' wx:if="{{Error404}}" style='width:100%;height:65vh;'></image>
  <!-- 底部 -->
  <template is="bottom" wx:if="{{loadingHidden}}"/>
</view>