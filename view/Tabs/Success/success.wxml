        <button data-num="3"  class="{{_num==3?'flag1':'flag'}}"  bindtap="show">化妆品类</button>
    </view>
    <view class='tr'>
        <button data-num="4"  class="{{_num==4?'flag1':'flag'}}"  bindtap="show">医药类</button>
