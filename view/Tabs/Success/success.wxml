<!-- 全部案例 -->
  <view  data-num="1" class="{{_num==1?'alshow':'alhide'}}" wx:for="{{imglist}}"wx:for-item="image" >
      <image data-list="{{imglist}}"data-src="{{image}}" src="{{image}}" bindtap="previewImage"></image>
  </view>
    
    
    
    
    
</view>

