        <button data-num="6"  class="{{_num==6?'flag1':'flag'}}"  bindtap="show">酒类</button>
    </view>
    <view class='tr'>
        <button data-num="7"  class="{{_num==7?'flag1':'flag'}}"  bindtap="show">食品类</button>
        <button data-num="8"  class="{{_num==8?'flag1':'flag'}}"  bindtap="show">孕婴童类</button>
        <button data-num="9"  class="{{_num==9?'flag1':'flag'}}"  bindtap="show">汽配类</button>
    </view>
    <view class='tr'>
        <button data-num="10"  class="{{_num==10?'flag1':'flag'}}"  bindtap="show">建材类</button>
        <button data-num="11"  class="{{_num==11?'flag1':'flag'}}"  bindtap="show">农资类</button>
