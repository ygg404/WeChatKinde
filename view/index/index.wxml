 <scroll-view style="height:100%;" scroll-y="true" scroll-top="{{scrollTop.scroll_top}}" bindscroll="scrollTopFun" >  
  

<view class="header"></view>
<view class="title">广东正迪科技股份有限公司</view>

<!-- 轮播图 -->
<view class="page-section page-section-spacing swiper" style="width: 100%; height: 400rpx;">
  <swiper indicator-dots="true" indicator-active-color="#c81623" autoplay="false" interval="4500" duration="700" style="width: 100%; height: 380rpx;" >
    <swiper-item wx:for="{{banner_list}}" wx:for-item="banner" wx:key="{{banner.banner_id}}">
        <image style="width: 100%; height: 380rpx; position: absolute; " src="{{banner.banner_image}}" />
      </swiper-item>
    </swiper>
</view>


<loading hidden="{{loadingHidden}}" style='z-index:999'>
        加载中...
</loading>

<view class='page_row' >  
  <view class="search">  
    <view class="df search_arr">  
      <image class="searchcion" size='20' src='../../image/scanCode.png'  bindtap="recognizeCode" ></image>  
      <input type="number" style='font-size:33rpx'  placeholder="请输入防伪码或扫描二维码" bindinput="numInput" value="{{numQuery}}"/>  
    </view>  
  </view>  
  <button class='sousuo' bindtap="queryBtnTap" disabled="{{btnDisable}}">查询</button>  
</view> 
 
<!-- 类目 -->
<view class="index-category">
  <navigator url="/view/category/index?category_id={{category.category_id}}" class="index-category-item" wx:for="{{category_list}}" wx:for-item="category" wx:key="{{category.category_id}}">
    <view class="index-category-item-icon" style="background: {{category.category_color}};">
        <image class="index-category-item-icon-image" src="{{category.category_image}}" />
    </view>
      {{category.category_name}} 
  </navigator>
</view> 

<!-- 视频 -->
<view class='index-video'>
  <video id="myVideo" style="width:94%;margin-left:3%;margin-top:40rpx;height:400rpx;z-index:0;"
  src="https://mini.kd315.net/Content/videos/kindeAd.mp4" loop autoplay objectFit="fill" ></video>
</view>  

